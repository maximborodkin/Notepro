<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomBarButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="drawableTint">?colorOnPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?colorOnPrimary</item>
        <item name="android:colorControlNormal">?colorOnPrimary</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialog.Button</item>
        <item name="shapeAppearanceOverlay">@style/AlertDialog.Rounded</item>
    </style>

    <style name="AlertDialog.Rounded">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="TextAppearance.Chip.Bold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chip.Italic" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">italic</item>
    </style>

</resources>